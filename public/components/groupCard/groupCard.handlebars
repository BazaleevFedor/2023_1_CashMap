<div class="profileCard">
    <div class="profileCard__header groupCard__header" style="background-image: url( static/img/profile_background.svg )">
        <button class="profileCard__button" data-action="message">
            <div class="profileCard__button-text">
                Изменить обложку
            </div>
        </button>
    </div>
    <div class="profileCard__body">
        <div class="profileCard__info">
            <div class="profileCard__inf">
                <div class="profileCard__info-img-wrapper background-color-post "></div>
                <img src="{{ avatar }}" class="profileCard__info-img avatar-form">
            </div>
            <div class="profileCard__info-data">
                <div class="profileCard__info-text profileCard__info-text_header">{{ title }}</div>
                <div class="profiteCard__info-check">
                    <img src="static/img/ok.svg" class="profileCard__info-img avatar-form">
                    <div class="profileCard__info-text font-InterMedium ">Вы подписаны</div>
                </div>
            </div>
        </div>
        <button class="profileCard__button profileCard__button_grey" data-action="message" data-id="{{ group_link }}">
            <div class="profileCard__button-text" id="js-group-settings-btn"> Редактировать </div>
        </button>
    </div>
</div>
