<div class="group" id="group">
    {{> sideBar sideBarData}}
    {{> header headerData}}
    <div class="group__body">
        <div class="group__card">
            {{> groupCard goupData}}
        </div>
        <div class="group__posts">
            {{> postArea postAreaData}}
        </div>
        <div class="group__info border-radius-btn-input background-color-post box-shadow-create-post">
            <p class="font-color-post-sender font-MailSansRoman font-size-16">Подробная информация</p>
            <div class="group__info_text font-color-gray-text font-InterMedium font-size-13">{{goupData.info}}</div>
        </div>
    </div>
</div>
