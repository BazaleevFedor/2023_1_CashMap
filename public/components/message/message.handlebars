<div class="message" id="{{id}}">
    <div class="message__info">
        <img src="{{friendPhoto}}" class="message__friend-avatar">
        <div class="message__block message__block_flex-start">
            <div class="message__text">{{firstName}} {{lastName}}</div>
            <div class="message__text message__text_grey">{{text}}</div>
        </div>
    </div>
    <div class="message__block">
        <div class="message__date">{{date}}</div>
        {{#if isUnread}}
            {{#if isMuted}}
            <div class="message__status message__status_muted"> </div>    
            {{else}}
            <div class="message__status"> </div>
            {{/if}}
        {{/if}}
    </div>
</div>