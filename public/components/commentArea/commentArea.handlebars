<div class="comments-area">
    <div class="comments-list">
        {{#each comments }}
            {{> comment this }}
        {{/each}}
    </div>

    <div class="create-comment">
        <img class="create-comment__avatar profile-img-size" src={{ senderPhoto }}>
        <input class="create-comment__input border-radius-btn-input background-item-hovered border-none" placeholder="Написать комментарий">

        <img class="create-comment__photo-icon" src="static/img/post_icons/photo.svg">
        <img class="create-comment__emoji-icon" src="static/img/post_icons/smile.svg">
        <img class="create-comment__send-icon" src="static/img/post_icons/send.svg">
    </div>
</div>
